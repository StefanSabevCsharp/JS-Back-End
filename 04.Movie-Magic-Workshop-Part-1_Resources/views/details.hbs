{{#with movie}}
    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>{{title}}</h1>
                    <div class="card-movie">
                        <div class="first-info">
                            <p class="card-genre">Genre: {{genre}}</p>
                            <p class="card-director">Directror: {{director}}</p>
                        </div>
                        <div class="second-info">
                            <p class="card-year">Year: {{year}}</p>
                            <p class="card-ranking">Rating:
                                <span id="stars">{{{stars}}}</span></p>
                        </div>

                    </div>

                    <p class="disc">Description: {{description}}</p>
                </div>
                <div class="details-btn">
                            <a href="/edit/{{_id}}"><button id="edit-button">Edit</button></a>
                           <a href="/delete/{{_id}}"><button id="delete-button">Delete</button></a>
                </div>
            </div>
            <div class="card_right">
                <img src="{{imageURL}}" alt="image" />
            </div>
        </div>
        <div class="main-cast-card">
            {{#if cast}}
            {{#each cast}}
            {{> singleCastCard}}
            {{/each}}   
            {{else}}
            <div class="no-cast">
                        <p>There are no casts added yet...</p>
             </div>
            {{/if}}

    </section>
{{/with}}